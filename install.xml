<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
	<name>amr</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>2013-09-25</creationDate>
	<author>Aborilov Pavel</author>
	<authorEmail>pavel@aborilov.ru</authorEmail>
	<!--  The version string is recorded in the components table -->
	<version>0.01</version>
	<!-- The description is optional and defaults to the name -->
	<description>Automatic meter reading</description>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
      to copy FROM in the package to install therefore files copied
      in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>amr.php</filename>
		<filename>index.html</filename>
		<filename>models/stat.php</filename>
		<filename>controllers/addcontr.php</filename>
		<filename>views/index.html</filename>
		<filename>views/amr/index.html</filename>
		<filename>views/amr/view.html.php</filename>
		<filename>views/amr/tmpl/default.php</filename>
		<filename>views/amr/tmpl/index.html</filename>
		<filename>views/stat/index.html</filename>
		<filename>views/stat/view.html.php</filename>
		<filename>views/stat/tmpl/default.php</filename>
		<filename>views/stat/tmpl/index.html</filename>
		<filename>views/add/index.html</filename>
		<filename>views/add/view.html.php</filename>
		<filename>views/add/tmpl/default.php</filename>
		<filename>views/add/tmpl/index.html</filename>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>Automatic meter reading</menu>

		<!-- Administration Main File Copy Section -->
		<files folder="admin">
			<filename>amr.php</filename>
			<filename>index.html</filename>
		</files>
	</administration>
	 <!-- UPDATESERVER DEFINITION -->
        <updateservers>
                <!-- Note: No spaces or linebreaks allowed between the server tags -->
                <server type="extension" priority="1" name="AMR Update Site">http://vsk40.ru/update/amr-update.xml</server>
        </updateservers>
</install>
